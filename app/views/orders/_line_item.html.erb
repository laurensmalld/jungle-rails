<% quantity = details['quantity'].to_i %>

<% if product = Product.find_by(id: product_id) %>
  <% item_total = product.price * quantity %>
  <% @cart_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
     <p><%= quantity %>ordered at <%= product.price %>for total of <%= item_total %></p>
      <% end %>
    </td>
    <td>
      <p>Total amount of your order: <%= @cart_total %></p>
    </td>
    <td>
    <p>Ordered by: <%= user.email %></p>
    </td>

  </tr>
<% end %>