<dl>
<% @product.reviews.reverse.each do |rev| %>
<% if !rev.description.blank? %>
  <dt>Customer review: </dt><dd><%= rev.description %></dd>
  <dt>Rating: <%= rev.rating %></dt>
  <% if current_user && (current_user.id == rev.user_id) %>
  <dt><%= link_to fa_icon('trash'), [@product, rev], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </dt>
  <% end %>
  </dl>
<% end %>
<% end %>